{
  "name": "discord-rpc-ui",
  "version": "1.0.0",
  "private": true,
  "author": "Your Name",
  "description": "Lightweight Electron app to control Discord Rich Presence via UI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1"
  },
  "devDependencies": {
    "electron": "31.7.7",
    "electron-builder": "26.0.12"
  },
  "build": {
    "appId": "com.yourname.discordrpcui",
    "productName": "Discord RPC UI",
    "executableName": "DiscordRPCUI",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "renderer.html",
      "rpc.js",
      "icon.png"
    ],
    "extraResources": [
      {
        "from": "preload.js",
        "to": "preload.js"
      }
    ],
    "win": {
      "target": [
        "dir",
        "portable"
      ],
      "icon": "icon.png"
    }
  }
}
